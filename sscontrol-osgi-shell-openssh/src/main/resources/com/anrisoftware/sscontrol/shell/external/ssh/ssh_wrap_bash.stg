sshCmd(args) ::= <<
#!/bin/bash
USER=$(id -u)
<sshCommand(args)>
<if(args.privileged)>
<sshChdir(args.sudoChdir)>
<sshEnv(args.sudoEnv)>
sudo <args.shell> \<\< \eof2
<theCommand(args)>
eof2
<else>
<theCommand(args)>
<endif>
eof1
>>

theCommand(args) ::= <<
<sshChdir(args.chdir)>
<sshEnv(args.env)>
<args.command>
>>
